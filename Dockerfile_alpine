# Stage 1: Build frontend
FROM node:20-alpine AS frontend-builder
RUN corepack enable && corepack prepare pnpm@8.15.0 --activate
WORKDIR /app/web
COPY web/package.json web/pnpm-lock.yaml ./
RUN pnpm install --frozen-lockfile
COPY web/ ./
RUN pnpm run build

# Stage 2: Build backend
FROM golang:1.18-alpine AS backend-builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
COPY --from=frontend-builder /app/web/dist ./cmd/server/dist
RUN CGO_ENABLED=0 go build -o relay ./cmd/server

# Stage 3: Final image (minimal)
FROM alpine:3.19
RUN apk add --no-cache ca-certificates tzdata
WORKDIR /app
COPY --from=backend-builder /app/relay .

RUN mkdir -p /data

ENV DB_PATH=/data/relay.db
ENV PORT=8080

EXPOSE 8080

VOLUME ["/data"]

CMD ["./relay"]
